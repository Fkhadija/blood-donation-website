<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Hospital Requests</title>
  <div id="particles-js"></div>
  <script src="/js/particles.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
</head>
<body>
    <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
    <script src="/js/stats.js"></script>
  <%- include('../partials/header') %>
  <main>
    <h2>Blood Requests from Hospitals</h2>
    <div class="hospital-list">
      <% requests.forEach(request => { %>
        <div class="card">
          <h3><%= request.name %></h3>
          <p><strong>Location:</strong> <%= request.location %></p>
          <p><strong>Blood Type Needed:</strong> <%= request.bloodTypeNeeded %></p>
          <p><strong>Contact:</strong> <%= request.contact %></p>
        </div>
      <% }) %>
    </div>
  </main>
  <footer>
    <p>&copy; 2025 Blood Donation Website. All rights reserved.</p>
    <div class="social-links">
      <a href="#" aria-label="Facebook"><i class="fab fa-facebook"></i></a>
      <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
      <a href="#" aria-label="Instagram"><i class="fab fa-instagram"></i></a>
      <a href="#" aria-label="LinkedIn"><i class="fab fa-linkedin"></i></a>
    </div>
  </footer>
</body>
</html>